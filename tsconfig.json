{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": true,
    "diagnostics": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "assets",
    "jest.*",
    "prettier.*",
    "tsconfig.*",
    "./**/*.spec.ts",
    "./**/*.test.ts",
    "./**/*.mock.ts",
    "src/shared/infra/typeorm/migrations"
  ]
}
